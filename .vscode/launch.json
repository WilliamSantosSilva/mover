    "version": "0.2.0",
    "configurations": [
        {
            "name": "Api-Local",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/Presentation/Mover.Loc.Api/bin/Debug/net8.0/Mover.Loc.Api.dll",
            "args": [],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            },
            "launchSettingsFilePath": "${workspaceFolder}/Presentation/Mover.Loc.Api/Properties/launchSettings.json",
            "launchSettingsProfile": "Local"
        },
    ]
}